<Window x:Class="TestTekla.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestTekla"
        mc:Ignorable="d"
        Title="生成模型 V3.7" Height="446.874" Width="400.671">
    <Grid Margin="0,0,2,4">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="6*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="button" Content="生成模型" HorizontalAlignment="Left" Margin="210,57,0,0" VerticalAlignment="Top" Width="106" Height="28" Click="button_Click" Grid.Column="1"/>
        <ComboBox x:Name="comboBox" HorizontalAlignment="Left" Margin="85,23,0,0" VerticalAlignment="Top" Width="120" SelectedIndex="1" SelectionChanged="comboBox_SelectionChanged" IsEnabled="False" Grid.Column="1">
            <ComboBoxItem Content="是"/>
            <ComboBoxItem Content="否"/>
        </ComboBox>
        <Label x:Name="label" Content="梁中心线是否偏移：" HorizontalAlignment="Left" Margin="19,23,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2"/>
        <CheckBox x:Name="checkbox_PIP_CENTRE" Content="圆管支撑调整为中心对齐" HorizontalAlignment="Left" Margin="19,70,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2"/>
        <TextBox x:Name="Output_Text" Height="106" Margin="18,241,0,0" TextWrapping="Wrap" VerticalAlignment="Top" TextChanged="Output_Text_TextChanged" IsReadOnly="True" HorizontalAlignment="Left" Width="362" Grid.ColumnSpan="2"/>
        <Label Content="模型信息" HorizontalAlignment="Left" Margin="20,211,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.54,2.064" Grid.ColumnSpan="2"/>
        <ComboBox x:Name="combox_mat_column" HorizontalAlignment="Left" Height="21" Margin="65,102,0,0" VerticalAlignment="Top" Width="78" SelectionChanged="ComboBox_SelectionChanged_1" Grid.Column="1"/>
        <Label x:Name="label_Copy" Content="默认&#xD;&#xA;材料强度" HorizontalAlignment="Left" Margin="19,90,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2"/>
        <Label x:Name="label_Copy1" Content="柱" HorizontalAlignment="Left" Margin="38,98,0,0" VerticalAlignment="Top" Grid.Column="1"/>
        <ComboBox x:Name="combox_mat_beam" HorizontalAlignment="Left" Margin="196,102,0,0" VerticalAlignment="Top" Width="77" SelectionChanged="combox_mat_beam_SelectionChanged" Grid.Column="1"/>
        <Label x:Name="label_Copy2" Content="梁" HorizontalAlignment="Left" Margin="163,98,0,0" VerticalAlignment="Top" Grid.Column="1"/>
        <Button x:Name="Button_AddMaterial" Content="增加钢材型号" HorizontalAlignment="Left" Margin="19,145,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click_1" Grid.ColumnSpan="2"/>
        <TextBox x:Name="MaterialTextBox" HorizontalAlignment="Left" Height="23" Margin="65,145,0,0" TextWrapping="Wrap" Text="Q355B" VerticalAlignment="Top" Width="78" Grid.Column="1"/>
        <Label Content="© 创新研究院-BIM数字中心" Margin="65,371,108,0" RenderTransformOrigin="0.54,2.064" FontSize="10" FontWeight="Bold" Height="22" VerticalAlignment="Top" Grid.Column="1"/>
        <Image HorizontalAlignment="Left" Height="31" Margin="232,362,0,0" VerticalAlignment="Top" Width="92" Source="index-logo.png" Grid.Column="1"/>
        <Label Content="构件颜色(等级）" HorizontalAlignment="Left" Margin="19,181,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.54,2.064" Grid.ColumnSpan="2"/>
        <ComboBox x:Name="combo_color" HorizontalAlignment="Left" Margin="65,181,0,0" VerticalAlignment="Top" Width="120" Grid.Column="1"/>
        <Button Name="SelectPEC" Grid.Column="1" Content="选择生成PEC" HorizontalAlignment="Left" Height="33" Margin="218,181,0,0" VerticalAlignment="Top" Width="105" Click="SelectPEC_Click"/>

    </Grid>
</Window>
